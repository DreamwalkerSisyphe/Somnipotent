<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    >


    <!-- This dialog activity for updating information -->
    <Button
        android:id="@+id/rcshareButtonIdUpdate"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cacelButtonIdUpdate"
        android:background="@color/colorPrimaryDark"
        android:drawableTint="#FFFFFF"
        android:drawableLeft="@drawable/share"
        android:drawableStart="@drawable/share" />

    <Button
        android:id="@+id/rccacelButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/saveButtonIdUpdate"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="cancel" />

    <Button
        android:id="@+id/rcsaveButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="Update" />

    <EditText
        android:id="@+id/rcsubjectEditTextIdUpdate"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="49dp"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:maxLength="35"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/rcdescriptionEditTextIdUpdate"
        android:layout_width="390dp"
        android:layout_height="433dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="134dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:gravity="start"
        android:textColorHint="#FFFFFF"
        android:hint="Describe the reality check."
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />
</RelativeLayout>
