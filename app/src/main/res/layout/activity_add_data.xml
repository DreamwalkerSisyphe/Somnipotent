<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/dialogId">

    <!-- This dialog activity for adding information -->

    <Button
        android:id="@+id/shareButtonId"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:drawableLeft="@drawable/share"
        android:drawableStart="@drawable/share" />

    <Button
        android:id="@+id/cacelButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/saveButtonId"
        android:background="#00000000"
        android:text="cancel" />

    <Button
        android:id="@+id/saveButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:text="Save" />

    <EditText
        android:id="@+id/subjectEditTextId"
        android:layout_width="191dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shareButtonId"
        android:backgroundTint="#00ffffff"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:maxLength="35"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/tvDateId"
        android:layout_width="193dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/shareButtonId"
        android:gravity="center_vertical"
        android:hint="Select Date"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/descriptionEditTextId"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#00ffffff"
        android:ems="10"
        android:gravity="start"
        android:hint="Tell us your dream"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

</RelativeLayout>