<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    >


    <!-- This dialog activity for updating information -->
    <Button
        android:id="@+id/shareButtonIdUpdate"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cacelButtonIdUpdate"
        android:background="@color/colorPrimaryDark"
        android:drawableTint="@color/colorAccent"
        android:drawableLeft="@drawable/share"
        android:drawableStart="@drawable/share" />

    <Button
        android:id="@+id/cacelButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/saveButtonIdUpdate"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:text="cancel" />

    <Button
        android:id="@+id/saveButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:text="Update" />

    <EditText
        android:id="@+id/subjectEditTextIdUpdate"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="49dp"
        android:textColorHint="@color/colorAccent"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:maxLength="35"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvDateUpdate"
        android:layout_width="185dp"
        android:layout_height="72dp"
        android:layout_below="@+id/shareButtonIdUpdate"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/subjectEditTextIdUpdate"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:hint="Select Date"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/descriptionEditTextIdUpdate"
        android:layout_width="390dp"
        android:layout_height="433dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="134dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:gravity="start"
        android:textColorHint="@color/colorAccent"
        android:hint="Write about your dream."
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />
</RelativeLayout>
