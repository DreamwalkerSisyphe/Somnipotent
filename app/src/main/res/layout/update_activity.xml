<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- This dialog activity for updating information -->
    <Button
        android:id="@+id/shareButtonIdUpdate"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cacelButtonIdUpdate"
        android:background="#00000000"
        android:drawableLeft="@drawable/share"
        android:drawableStart="@drawable/share" />

    <Button
        android:id="@+id/cacelButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/saveButtonIdUpdate"
        android:background="#00000000"
        android:text="cancel" />

    <Button
        android:id="@+id/saveButtonIdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:text="Update" />

    <EditText
        android:id="@+id/subjectEditTextIdUpdate"
        android:layout_width="191dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:backgroundTint="#00ffffff"

        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:maxLength="35"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvDateUpdate"
        android:layout_width="193dp"
        android:layout_height="74dp"
        android:layout_below="@+id/shareButtonIdUpdate"
        android:layout_toEndOf="@+id/subjectEditTextIdUpdate"
        android:gravity="center_vertical"
        android:hint="Select Date"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/descriptionEditTextIdUpdate"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#00ffffff"
        android:ems="10"
        android:gravity="start"
        android:hint="Tell us your dream"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_marginLeft="0dp" />
</RelativeLayout>
