        </activity>
        <activity
            android:name=".AddDataActivity"
            android:label="@string/title_activity_add_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RCAddDataActivity"
            android:label="@string/title_activity_add_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LDEAddDataActivity"
            android:label="AddDataActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UpdateActivity" />
        <activity android:name=".RCUpdateActivity" />
        <activity android:name=".LDEUpdateActivity" />
        <activity android:name=".InstructionActivity"></activity>
        <receiver android:name=".ChannelOneAlarm"/>
        <receiver android:name=".ChannelTwoAlaram"/>
    </application>

</manifest>