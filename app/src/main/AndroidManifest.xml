        <activity android:name=".DreamJournalActivity"
            android:label="Dream Journal"
            android:parentActivityName=".HomeScreenActivity">
        </activity>
        <activity android:name=".RealityCheckActivity"
            android:label="Reality Checks"
            android:parentActivityName=".HomeScreenActivity">
        </activity>
        <activity android:name=".LucidDreamActivity"
            android:label="Lucid Dream Exercises"
